{
  "skin": {
    "playButton": {
      "icon":"glyphicon glyphicon-play",
      "style": {
        "fontSize": "72",
        "top": "50%",
        "left": "50%",
        "transform": "translate(-50%, -50%)",
        "position": "absolute",
        "opacity": 1,
        "transition": "opacity .25s ease-in-out",
        "color":"white"
      }
    },
    "pauseButton": {
      "icon":"glyphicon glyphicon-pause",
      "style": {
        "fontSize": "72",
        "top": "50%",
        "left": "50%",
        "transform": "translate(-50%, -50%)",
        "position": "absolute",
        "opacity": 1,
        "transition": "opacity .25s ease-in-out",
        "color":"blue"
      }
    },
    "controlBar": {
      "style": {
        "background": "rgba(48, 48, 48, 0.8)",
        "width": "100%",
        "height": 24,
        "top": "100%",
        "position": "absolute"
      }
    },
    "scrubberBar": {
      "style": {
        "background": "rgba(128, 128, 212, 0.8)",
        "width": "100%",
        "height": 6,
        "top": "100%",
        "position": "absolute"
      }
    },
    "progressBar": {
      "style": {
        "background": "white",
        "width": 0,
        "height": 6,
        "top": "100%",
        "position": "absolute"
      }
    },
    "progressIcon": {
      "icon": "glyphicon glyphicon-heart",
      "style": {
        "fontSize": "20",
        "color":"black",
        "left": "0%",
        "top": "100%",
        "position": "absolute"
      }
    }
  }
}